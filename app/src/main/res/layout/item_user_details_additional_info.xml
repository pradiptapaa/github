<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="8dp"
    app:contentPadding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_user_details_additional_info_tv_title"
            style="@style/TextView.Centered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/helper_repos"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_user_details_additional_info_tv_content"
            style="@style/TextView.Centered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/helper_11"
            android:textSize="14sp" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>